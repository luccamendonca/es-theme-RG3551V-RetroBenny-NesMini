<theme>
    <formatVersion>3</formatVersion>
	

	<view name="system">

		<image name="background" extra="true">
			<path>./system_art.png</path>
		</image>

		<image name="logo">
			<path>./logo.png</path>
        </image>
			
	</view>
	
	<feature supported="carousel">

		<view name="system">
			<image name="logo">
				<path>./carousel_logo.png</path>
			</image>
			
			<image name="carousel_bar" extra="true">
				<color>ff70bf</color>
			</image>
		
		</view>

	</feature>

	<view name="basic, detailed, video">
	
		<image name="logo">
			<path>./logo.png</path>
			<pos>2 2</pos>
			<maxSize>0.1 0.1</maxSize>
			<origin>0 0.5</origin>
		</image>
	

		
		<textlist name="gamelist">
			<selectorColor>ff70bf</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>757575</primaryColor>
			<secondaryColor>ff70bf</secondaryColor>
		</textlist>
		
		<image name="background" extra="true">
			<path>./menu_background.png</path>
		</image>
		

	
	
		
		<image name="player_box" extra="true">
			<color>ff70bf</color>		
		</image>

		<text name="publisher_label, developer_label, genre_label, rating_label, played_label" extra="true">
			<color>ff70bf</color>
		</text>

			

		
		
	

	</view>
	
</theme>